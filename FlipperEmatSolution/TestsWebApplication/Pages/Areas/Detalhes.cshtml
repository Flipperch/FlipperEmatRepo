@page
@model TestsWebApplication.Pages.Areas.DetalhesModel
@{
    ViewData["Title"] = "Detalhes Area";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <p>
        <a asp-page="./Index">Retornar</a>
    </p> 
    <div>
        <h4>Area</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Area.AreaId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Area.AreaId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Area.NomeArea)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Area.NomeArea)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Area.Disciplinas)
            </dt>
            <dd class="col-sm-10">
                <table class="table">
                    <thead>
                        <tr>
                            <th>DisciplinaId</th>
                            <th>NomeDisciplina</th>
                            <th>NomeDisciplinaHistorico</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Area.Disciplinas)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DisciplinaId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeDisciplina)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeDisciplinaHistorico)
                                </td>
                                <td>
                                    <a asp-page="/Disciplinas/Edit" asp-route-id="@item.DisciplinaId">Alterar</a> |
                                    <a asp-page="/Disciplinas/Detalhes" asp-route-id="@item.DisciplinaId">Detalhes</a> |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>
        </dl>
    </div>    
</div>

